<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">


	<!-- 使用spring组件扫描 handler,在spring配置文件中配置了的话，此处也需要配置 -->
	<context:component-scan base-package="com.bolen.ssm" />
	<!-- 当使用<context:component-scan/>后，即可将<context:annotation-config/>省去 -->
	<!-- <context:annotation-config/> -->
	<mvc:annotation-driven />



	<!-- 配置视图解析器,要求将jstl的包导入到classpath,页面采用jstl的标签 -->
	<!-- ViewResolver -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/jsp/" />
	</bean>
	
	<mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="com.bolen.ssm.interceptor.FlowLimitInterceptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>